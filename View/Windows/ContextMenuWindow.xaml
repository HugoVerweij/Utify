<Window x:Class="Utify.View.Windows.ContextMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Utify.View.Windows"
        mc:Ignorable="d"
        WindowStyle="None"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        SizeToContent="Height"
        AllowsTransparency="True"
        Background="Transparent"
        Height="auto" Width="175"
        Title="ContextMenuWindow">
    <Border Margin="3">
        <Border BorderThickness="0"
                CornerRadius="0"
                Background="{StaticResource Normal15Brush}"
                BorderBrush="{StaticResource ContrastBrightBrush}">
            <StackPanel Name="StackPanelItems"
                        Margin="1">
            </StackPanel>
        </Border>
        <Border.Effect>
            <DropShadowEffect Opacity="0.5"
                              BlurRadius="5"
                              Direction="315"
                              ShadowDepth="2"
                              RenderingBias="Quality"/>
        </Border.Effect>
    </Border>
</Window>
